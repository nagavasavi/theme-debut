<h1>{{ product.title }}</h1>
<p>{{ product.price | money }}</p>
<div>
  {{ product.description}}
</div>

{% form 'product', product %}
    <select name="id">
        {% for variant in product.variants %}
          <option value={{ variant.id }}>
              {{variant.title}}
          </option>
        {% endfor %}
    </select>
{% endform %}

{% schema %}
{
"name": "Product detail Block",
"settings": [
                {
                    "id": "prod-det",
                    "label": "Choose Product",
                    "type": "url"
                }

            ],
"presets": [
            {
               "name": "Product detail Block"
            }
        ]
}
{% endschema %}