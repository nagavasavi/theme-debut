    "id": "ben-heading",
    "label": "Heading",
    "type": "text"
    }
],
"blocks": [
{
"name": "Product Block",
"type": "cardType",
"settings": [

{
"type": "richtext",
"id": "ben-title",
"label": "Text"
},
{
"type": "richtext",
"id": "ben-desc",
"label": "Description"
}
]
}
],

"presets": [
{
"name": "benefits Section"
}
]
}
{% endschema %}